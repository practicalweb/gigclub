{% extends "GigclubMembershipBundle::layout.html.twig" %}


{% block content -%}
    <h1>Membership list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Join_date</th>
                <th>Active</th>
                <th>Form</th>
                <th>Address1</th>
                <th>Address2</th>
                <th>Address3</th>
                <th>Town</th>
                <th>County</th>
                <th>Postcode</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('membership_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.joindate %}{{ entity.joindate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.active }}</td>
                <td>{{ entity.form }}</td>
                <td>{{ entity.address1 }}</td>
                <td>{{ entity.address2 }}</td>
                <td>{{ entity.address3 }}</td>
                <td>{{ entity.town }}</td>
                <td>{{ entity.county }}</td>
                <td>{{ entity.postcode }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('membership_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('membership_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('membership_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
